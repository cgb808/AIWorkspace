# Backend (FastAPI) Environment Variables

# Health Aggregation
HEALTH_AGG_ENABLE=false
GATEWAY_BASE=http://localhost:8000
RAG_API_BASE=http://localhost:8000

# Database Configuration
DATABASE_URL=postgresql://localhost:5432/zenglow
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=zenglow
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Ollama Configuration
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=mistral:7b

# Leonardo Configuration
LEONARDO_URL=http://localhost:11434
LEONARDO_MODEL=mistral:7b

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-service-role-key
SUPABASE_EDGE_FUNCTION=get_gemma_response

# Security & CORS
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]
API_KEYS_ENABLED=false

# Metrics & Monitoring
METRICS_ENABLED=true
WS_METRICS_ENABLED=true
METRICS_INTERVAL=4000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Development
DEV_MODE=true
DEBUG=false
